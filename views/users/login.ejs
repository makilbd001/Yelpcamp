<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/login.css">
<div class="d-flex justify-content-center align-items-center min-vh-100 ">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">
        <h2 class="text-center mb-4">Login</h2>
        <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username"><i class="fa fa-user"></i> Username</label>
                <input class="form-control form-control-lg" type="text" id="username" name="username" placeholder="Enter your username" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="password"><i class="fa fa-lock"></i> Password</label>
                <input class="form-control form-control-lg" type="password" id="password" name="password" placeholder="Enter your password" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            
            <button class="btn btn-primary btn-lg w-100" style="background-color: #d63384; border-color: #d63384;">Login</button>
        </form>
        <div class="text-center mt-3">
            <a href="#" class="text-muted">Forgot your password?</a>
        </div>
    </div>
</div>
